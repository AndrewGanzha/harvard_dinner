# ============ SERVER ============
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# ============ GIGACHAT API ============
GIGACHAT_CREDENTIALS=your_authorization_key_here
GIGACHAT_MODEL=GigaChat
GIGACHAT_SCOPE=GIGACHAT_API_PERS
GIGACHAT_API_URL=https://gigachat.devices.sberbank.ru/api/v1

# ============ POSTGRES ============
POSTGRES_DB=harvard_plate
POSTGRES_USER=harvard_user
POSTGRES_PASSWORD=harvard_password
PGHOST=localhost
PGPORT=5432
PGDATABASE=harvard_plate
PGUSER=harvard_user
PGPASSWORD=harvard_password
PG_CONNECTION_LIMIT=10
PGSSL=false
# DATABASE_URL=postgres://user:pass@host:5432/dbname?sslmode=require

# ============ TELEGRAM MINI APPS AUTH ============
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_AUTH_TTL_SECONDS=86400

# ============ RATE LIMITING ============
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============ LOGGING ============
LOG_LEVEL=info
