# ============ SERVER ============
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# ============ GIGACHAT API ============
GIGACHAT_CREDENTIALS=your_authorization_key_here
GIGACHAT_MODEL=GigaChat
GIGACHAT_SCOPE=GIGACHAT_API_PERS
GIGACHAT_API_URL=https://gigachat.devices.sberbank.ru/api/v1

# ============ MYSQL ============
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=harvard_plate
MYSQL_USER=harvard_user
MYSQL_PASSWORD=harvard_password
MYSQL_ROOT_PASSWORD=harvard_root_password
MYSQL_CONNECTION_LIMIT=10

# ============ TELEGRAM MINI APPS AUTH ============
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_AUTH_TTL_SECONDS=86400

# ============ RATE LIMITING ============
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============ LOGGING ============
LOG_LEVEL=info
